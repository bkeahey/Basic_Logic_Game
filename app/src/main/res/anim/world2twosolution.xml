<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true">

    <rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:toDegrees="1080"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="16000" />
    <!--Keeps image rotating-->

    <translate
        android:toYDelta="520"
        android:duration = "4000"
        android:fillAfter="true"/>
    <!--Moves image to the down for a duration-->

    <translate
        android:startOffset="4000"
        android:toXDelta="600"
        android:duration = "4000"
        android:fillAfter="true"/>
    <!--Moves image to the right for a duration-->

    <translate
        android:startOffset = "8000"
        android:toYDelta="-520"
        android:duration = "4000"
        android:fillAfter="true"/>
    <!--Moves image up for a duration-->

    <translate
        android:startOffset = "12000"
        android:toXDelta="800"
        android:duration = "4000"
        android:fillAfter="true"/>
    <!--Moves image right for a duration-->

</set>